@model IEnumerable<ILikeTheBartender.Models.DrinkOrder>

@{
    ViewBag.Title = "Drink Orders";
}

<h2>Drink Orders</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustomerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Alcohol)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mixer)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Alcohol)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mixer)
        </td>
        <td>
            @Html.ActionLink("Modify Order", "Edit", new { id=item.OrderId }) |
            @Html.ActionLink("Delete Order", "Delete", new { id=item.OrderId })
        </td>
    </tr>
}

</table>
